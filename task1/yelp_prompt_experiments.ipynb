import pandas as pd

df = pd.read_csv("data/yelp_reviews.csv")
df = df[['review_text', 'stars']]
df = df.dropna()
df = df.sample(n=200, random_state=42).reset_index(drop=True)

df.head()

import google.generativeai as genai
import json
from tqdm import tqdm
import os

genai.configure(api_key=os.getenv("GEMINI_API_KEY"))

model = genai.GenerativeModel("gemini-1.5-flash")

with open("prompts/prompt_v1.txt", "r") as f:
    PROMPT_V1 = f.read()

results_v1 = []

for _, row in tqdm(df.iterrows(), total=len(df)):
    prompt = PROMPT_V1.replace("{review_text}", row["review_text"][:2000])
    
    try:
        response = model.generate_content(prompt)
        text = response.text.strip()
        parsed = json.loads(text)
        
        results_v1.append({
            "review_text": row["review_text"],
            "actual_stars": row["stars"],
            "predicted_stars": parsed.get("predicted_stars"),
            "explanation": parsed.get("explanation"),
            "json_valid": True
        })
    except Exception:
        results_v1.append({
            "review_text": row["review_text"],
            "actual_stars": row["stars"],
            "predicted_stars": None,
            "explanation": None,
            "json_valid": False
        })

results_v1_df = pd.DataFrame(results_v1)
results_v1_df.head()
results_v1_df.to_csv("results_prompt_v1.csv", index=False)
results_v1_df["json_valid"].value_counts()
